{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "./build"
  },
  "include": [
    "./lib/**/*",
    "./sample/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
